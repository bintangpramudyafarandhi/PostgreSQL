<style>
    .bi {
        width: 10px;
        height: 10px;
    }
    ul{
        list-style: none;
    }
</style>
<h1 class="text-center">Edit Contact</h1>

<svg xmlns="http://www.w3.org/2000/svg" style="display: none">
    <symbol id="exclamation-triangle-fill" viewBox="0 0 16 16">
        <path
            d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
    </symbol>
</svg>

<% if (typeof errors !='undefined' ) { %>
    <div class="alert alert-danger d-flex align-items-center w-25 container" role="alert">
        <ul>
            <% errors.forEach(err=> { %>
                <li>
                    <svg class="bi flex-shrink-0" role="img" aria-label="Danger:">
                        <use xlink:href="#exclamation-triangle-fill" />
                    </svg>
                    <%= err.msg %>
                </li>
                <% }) %>
        </ul>
    </div>
    <% } %>

        <div class="container w-50">
            <form class="w-50 m-auto" action="/edit/<%= params%>" method="post">
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Name</label>
                    <input type="text" name="name" value="<%=getDetail.Name%>" class="form-control"
                        id="exampleInputPassword1" required />
                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Email address</label>
                    <input type="email" name="email" value="<%=getDetail.Email%>" class="form-control"
                        id="exampleInputEmail1" aria-describedby="emailHelp" required />
                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Phone No.</label>
                    <input type="tel" name="mobile" value="<%=getDetail.Mobile%>" class="form-control"
                        id="exampleInputEmail1" aria-describedby="emailHelp" required />
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
                <a class="btn btn-danger" role="button" href="/contact/<%= getDetail.Name %> ">Cancel</a>
            </form>
        </div>